@import "classes.styl"
@import "fonts/stylesheet.css"
*
	margin 0 
	padding 0
body 
	background #313131 url('images/cartographer.jpg') 
	font-family 'aller' , Arial
	color white
	font-size 16px
footer 
	background #1a1a1a
	border-top 1px solid red
	padding 25px 0
	p 
		color #808080
		font-size 14px
		line-height 22px
		text-align center 
		text-transform uppercase
h1 
	font-size 29px
	font-weight normal
	line-height 32px
	span
		font-size 46px
		font-weight bold
header
	.content 
		padding-top 30px
		background black
		margin-bottom 90px
		position relative

nav 
	background #1e1e1e
	border-top 2px solid #7b0e13
	//overflow hidden
	height 45px 
	line-height 45px
	a 
		color white
		text-decoration none
		padding 0 20px
		display block
		&:hover 
			text-decoration underline
	li 
		float left
		list-style none
		position relative
		transition .2s
		&:hover 
			background #4E4E4E
			ul 
				display block

	.menu 
		ul 
			background #1E1E1E
			color red
			display none
			position absolute
			top 100%
			z-index 10
			li 
				border-top 1px solid #7b0e13
				display block
				float none
				line-height normal
				a 
					padding 10px


#logo
	position absolute
	top 0
	bottom 0
	padding-top 20px
	padding-left 40px
	z-index 5
	width 900px
	background url('images/kanjis.png') no-repeat right 50px
	.kanjis
		float right 

.slider 
	background black
	height 549px
#encuentranos 
	text-align center
	h3 
		background url('images/encabezado.jpg') 
		font-family 'droid'
		font-size 30px
		font-style italic
		font-weight normal
		height 76px
		line-height 76px
		text-align left
		text-transform uppercase
	#map 
		//margin 30px auto
		//border 5px solid black
		text-align center
	.content	
		@extends .clearfix
		&.datos
			background white
			color black
			margin 60px auto
			box-shadow   -20px -20px 0 #4C4C4C
			border 1px solid black
		> div 
			width 460px
			float left
			padding 20px
		.mapa
			float right
			padding 0
			font-size 0
			overflow hidden
		.contacto
			a 
				color #ED1C24
			p 
				text-align right 
				margin 10px 0
				letter-spacing 2px
				&:first-letter
					font-size 25px
			strong
				letter-spacing 1px
#tabs 
	width 940px
	margin -100px auto 20px auto
	font-size 0 
	position absolute
	left 0 
	right 0
	z-index 5
	> div 
		display inline-block
		font-size 16px
		min-height 160px
		vertical-align top
		width 33.3%
		box-sizing border-box
		padding 20px

	h2 
		font-size 20px
		font-weight normal
		margin-bottom 5px
	h3 
		font-family 'droid'
		font-style italic
		font-size 16px
		margin-bottom 10px
	h3 
		color black
	p 
		font-size 12px
		padding 8px 0 12px 60px
	ul 
		padding-left 20px
	li 
		list-style url('images/relojito_icono.png')
		font-size 14px
	.red
		background #ed1c24
		h3 
			color black
		p 
			background url('images/megusta_icono.png') no-repeat left bottom
	.gray
		background #4c4c4c
		p 
			background url('images/credencial_icono.png') no-repeat left bottom

	.white 
		background white
		color black
		h2 
			color #ed1c24
		h3 
			color #515151

			

.content
	width 1000px
	margin 0 auto
	display block


